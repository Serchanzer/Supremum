var pot = require('@amperka/pot').connect(A0);
var light = require('@amperka/led').connect(P1).turnOn();
var trigger = require ('@amperka/button').connect(P3);
var buzzer = require('@amperka/buzzer').connect(P5);
var sensor = require('@amperka/light-sensor').connect(A2);
var barrier = require('@amperka/servo').connect(P13).write(90);

setInterval(function() {
  var lx = sensor.read('lx').toFixed(2);
  var time = getTime().toFixed(0);
  console.log(time, 'sec', '->', lx,'luxes');           
}, 1000);