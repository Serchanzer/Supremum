var pot = require('@amperka/pot').connect(A0);
var led = require('@amperka/led').connect(P1).turnOn();
var button = require ('@amperka/button').connect(P3);
var buzzer = require('@amperka/buzzer').connect(P5).turnOn();
var sensor = require('@amperka/light-sensor').connect(A2);

button.on('press', function() {
  buzzer.toggle();
  led.toggle();
});
setInterval(function() { 
  buzzer.frequency(20 * sensor.read('lx'));
  led.brightness(sensor.read('lx') / 50);
}, 10);